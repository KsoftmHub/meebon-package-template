{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "declarationDir": "./dist/types",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "tests"
  ],
  "include": [
    "lib",
    "types"
  ]
}